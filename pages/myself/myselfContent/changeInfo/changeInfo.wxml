<view>
  <view class='allinput'>
    <view class="item">
      <text>学号：</text>
      <input type='number' placeholder='{{studentnum}}' confirm-type='next' confirm-hold='true' class='input' bindinput='numinput'></input>
    </view>
    <view class="item">
      <text>学院：</text>
      <input placeholder='{{college}}' confirm-type='next' confirm-hold='true' class='input' bindinput='collegeinput'></input>
    </view>
    <view class="item">
      <text>个性签名：</text>
      <input placeholder='{{description}}' confirm-type='next' class='input' bindinput='desinput'></input>
    </view>
    <view class="item">
      <text>微信号：</text>
      <input placeholder='{{weinum}}' confirm-type='done' class='input' bindinput='weinuminput'></input>
    </view>
  </view>
  
  <view class='allbutton'>
    <button type='primary' bindtap='sure'>确定</button>
    <button type='warn' bindtap='cancel'>取消</button>
  </view>
</view>