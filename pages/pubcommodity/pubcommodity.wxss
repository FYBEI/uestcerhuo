/* pages/pubcommodity/pubcommodity.wxss */
@import "../../iconfont.wxss";
.contain{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

.commodityInfo{
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  margin: 20rpx;
  border: 10rpx groove rgb(0, 100, 250);
}

.commodityinput{
  flex: 1;
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  border-bottom: 5rpx solid rgba(11, 109, 201, 0.603);
}

.commoditypicker{
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  border-bottom: 5rpx solid rgba(11, 109, 201, 0.603);
}

.next{
  position: relative;
  top: 50rpx;
  width: 50%;
  align-items: center;
}

.nextbutton{
  width: 100px;
  height: 100px;
  border: 2rpx solid #00E2FF;
  border-radius: 500px;
  box-shadow: 4px 1px 1px #cccccc;
  background: linear-gradient(120deg, rgba(20,100,100,0), rgba(20,150,150,1));
  color: rgba(0, 132, 255, 0.363);
  line-height: 100px;
}

.placeclass{
  color: #aaa;
  size: small;
}